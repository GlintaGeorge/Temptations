<main class="main">
    <div class="page-header breadcrumb-wrap">
      
        <div class="container">
            <div class="breadcrumb">
                <a href="/" rel="nofollow">Home</a>
                <span></span> Pages
                <span></span> My Profile
            </div>
        </div>
    </div>
    <section class="pt-150 pb-150">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 m-auto">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="dashboard-menu">
                                <ul class="nav flex-column" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" id="dashboard-tab" data-bs-toggle="tab"
                                            href="#dashboard" role="tab" aria-controls="dashboard"
                                            aria-selected="false"><i
                                                class="fi-rs-settings-sliders mr-10"></i>Dashboard</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" id="orders-tab" href="/orders" aria-controls="orders"
                                            aria-selected="false"><i class="fi-rs-shopping-bag mr-10"></i>Orders</a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link" id="address-tab" href="/savedAddress"
                                            aria-controls="address" aria-selected="true"><i
                                                class="fi-rs-marker mr-10"></i>My Address</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" id="account-detail-tab" data-bs-toggle="tab"
                                            href="#account-detail" role="tab" aria-controls="account-detail"
                                            aria-selected="true"><i class="fi-rs-user mr-10"></i>Account details</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" id="account-detail-tab" data-bs-toggle="tab"
                                            href="#change-psw" role="tab" aria-controls="account-detail"
                                            aria-selected="true"><i class="fi-rs-lock mr-10"></i>change password</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/logout"><i
                                                class="fi-rs-sign-out mr-10"></i>Logout</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="tab-content dashboard-content">
                                <div class="tab-pane fade active show" id="dashboard" role="tabpanel"
                                    aria-labelledby="dashboard-tab">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5 class="mb-0">Hello <%= user.userName %>
                                            </h5>


                                            <p class="mb-0">Email:<%= user.email %>
                                            </p>

                                        </div>
                                        <div class="card-body">

                                            <a href="/wallet/<%= wallet?._id %>"
                                                class="text-decoration-none text-center p-4 d-block">
                                                <i class="pe-7s-wallet fa-3x text-danger mb-3"></i>
                                                <h6 class="h4 fw-bold"> Wallet Balance</h6>
                                                <p class="text-muted">
                                                    ₹ <%= wallet?.balance ? wallet.balance.toFixed(2) : "0" %>
                                                </p>
                                                          
                                            </a>

                                            <!-- <p>From your account dashboard. you can easily check &amp; view your <a href="#">recent orders</a>, manage your <a href="#">shipping and billing addresses</a> and <a href="#">edit your password and account details.</a></p> -->
                                        </div>
                                        
                                        
                                    </div>
                                    
                                    

                                </div>
                                <div class="mb-4">
                                    <marquee direction="left">
                                        <h2 class="h6 fw-bold text-success">Refer a friend and earn upto 30
                                            cashback</h2>
                                    </marquee>
                                    <p class="lead">
                                        <span id="referral-code">
                                            <%= user.referralCode %>
                                        </span>
                                        <button class="btn btn-sm ml-2" id="copy-button">
                                            <i class="fas fa-copy text-dark fa-sm mb-3" data-toggle="tooltip"
                                                data-placement="top"></i>
                                        </button>
                                    </p>
                                </div>
                                
                            </div>
                            
                            <div class="tab-pane fade" id="account-detail" role="tabpanel"
                                aria-labelledby="account-detail-tab">
                                <div class="card">
                                    <div class="card-header">
                                        <h5>Account Details</h5>
                                    </div>
                                    <div class="card-body">
                                        <p>Already have an account? <a href="/login">Log in instead!</a></p>

                                        <form action="/edit-profile" method="POST">
                                            <div class="row">
                                                <div class="form-group col-md-12">
                                                    <label>Display Name <span class="required">*</span></label>
                                                    <input required="" type="text" id="userName"
                                                        class="form-control square" name="userName"
                                                        value="<%= user.userName %>">
                                                </div>
                                                <div class="form-group col-md-12">
                                                    <label>email <span class="required">*</span></label>
                                                    <input required="" type="email" id="email"
                                                        class="form-control square" name="email"
                                                        value="<%= user.email %>">
                                                </div>

                                                <div class="col-md-12">
                                                    <button type="submit" class="btn btn-fill-out submit" name="submit"
                                                        value="Submit">Save</button>
                                                </div>

                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade " id="change-psw" role="tabpanel"
                                aria-labelledby="change-psw-tab">
                                <div class="card">
                                    <div class="card-header">
                                        <h5>Change Password</h5>
                                    </div>
                                    <div class="card-body">
                                        <form method="Put">
                                            <div class="row">

                                                <div class="form-group col-md-12">
                                                    <label for="oldPassword"></label>
                                                    <input required="" type="password" name="oldPassword"
                                                        placeholder="oldPassword" id="oldPassword"
                                                        class="form-control square">
                                                </div>

                                                <div class="form-group col-md-12">
                                                    <label for="newPassword"></label>
                                                    <input required="" type="password" name="newPassword"
                                                        placeholder="newPassword" id="newPassword"
                                                        class="form-control square">
                                                </div>

                                                <div class="col-md-12">
                                                    <button type="submit" class="btn btn-fill-out submit" name="submit"
                                                        value="Submit" onclick="updatePassword()">Save</button>
                                                </div>

                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </section>
</main>

<script>
    async function updatePassword() {
        const oldPassword = document.getElementById('oldPassword').value;
        const newPassword = document.getElementById('newPassword').value;

        // Send a request to your server with oldPassword and newPassword
        // (using fetch, axios, or another HTTP library)

        const response = await fetch('/editpsw', {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json',
                // Include any necessary authentication headers
            },
            body: JSON.stringify({ oldPassword, newPassword }),
        });

        const result = await response.json();
        console.log(result);
    }
    const copyButton = document.getElementById("copy-button")
    copyButton.addEventListener("click", function () {
        const codeToCopy = referralCode.textContent;

        const textArea = document.createElement("textarea");
        textArea.value = codeToCopy;

        document.body.appendChild(textArea);

        textArea.select();
        textArea.setSelectionRange(0, 99999);

        document.execCommand("copy");

        document.body.removeChild(textArea);

        copyButton.innerText = "Copied!";
    });




</script>